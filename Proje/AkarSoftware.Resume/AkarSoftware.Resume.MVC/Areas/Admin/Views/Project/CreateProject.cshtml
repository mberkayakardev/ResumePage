@section style {

    <script src="https://cdn.tiny.cloud/1/vzf7ve9wqqox74jnlwl0kgqt75adziem7vqxli0jnw32zp3l/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#mytextarea'
        });
    </script>
}
<div class="col-12">

    <h2 class="text-center"> Proje Oluşturma Sayfası</h2>
    <hr />
    <br />

    <form asp-action="CreateProject" asp-controller="Project" asp-area="Admin" method="post">
        <div class="form-group">
            <label for="inputAddress">Proje Adı </label>
            <input type="text" name="Name " class="form-control" id="inputAddress" placeholder="Proje Adı Giriniz ">
        </div>
        <div class="form-group">
            <label for="inputAddress">Proje Açıklaması </label>
            <textarea name="Description" class="form-control" id="mytextarea" placeholder="Projeye bu aşamada açıklama girilecektir. "></textarea>

        </div>

        <button type="submit" class="btn btn-primary">Proje Kaydı </button>
    </form>
</div>

