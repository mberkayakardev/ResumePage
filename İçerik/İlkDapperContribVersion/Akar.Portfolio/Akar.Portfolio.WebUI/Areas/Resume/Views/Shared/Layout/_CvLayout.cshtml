<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Berkay Akar - Portfolio </title>
    <link rel="icon" type="image/x-icon" href="~/CvTema/wpriverthemes.com/HTML/drake/assets/images/favicon.png">
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
    <link href="~/CvTema/wpriverthemes.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/CvTema/wpriverthemes.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link href="~/CvTema/wpriverthemes.com/HTML/drake/assets/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/CvTema/wpriverthemes.com/HTML/drake/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/CvTema/wpriverthemes.com/HTML/drake/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/CvTema/wpriverthemes.com/HTML/drake/assets/css/animate.min.css">
    <link rel="stylesheet" href="~/CvTema/wpriverthemes.com/HTML/drake/assets/css/smooth-scrollbar.css">
    <link rel="stylesheet" href="~/CvTema/wpriverthemes.com/HTML/drake/assets/css/lightbox.min.css">
    <link rel="stylesheet" href="~/CvTema/wpriverthemes.com/HTML/drake/assets/css/style.css">
    <link rel="stylesheet" href="~/CvTema/wpriverthemes.com/HTML/drake/assets/css/responsive.css">

    @RenderSection("Css",false)

</head>
<body class="home1-page">

    <!-- Arka Plan Tema ayarı burada gerçekleşecektir. -->
    @await Component.InvokeAsync("Background")

    <!-- Loading Animation -->
    <div class="page-loader">
        <div class="bounceball"></div>
    </div>


    <!-- Menü Buton -->
    <span class="icon-menu">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
    </span>


    <!-- Burası yetkiye bağlanacak -->
    <partial name="PartialViews/CvPartial/_CvChangingTheme" />


     <!-- Burası Navigation Bar Olarak çekilecek -->
     @await Component.InvokeAsync("NavigationBar")

     <!--Profile Card-->
     @* @await Component.InvokeAsync("ProfileCard") *@


    <main class="drake-main">
        <div id="smooth-wrapper">
            <div id="smooth-content">
                
                <!--Profile Card-->
                @* @await Component.InvokeAsync("ProfileCard") *@
                
                @RenderBody();

            </div>
        </div>
    </main>


    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/jquery.js"></script>
    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/owl.carousel.js"></script>
    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/gsap.min.js"></script>
    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/ScrollTrigger.min.js"></script>
    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/ScrollToPlugin.min.js"></script>
    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/lightbox.min.js"></script>
    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/main.js"></script>
    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/ajax-form.js"></script>
    <script src="~/CvTema/wpriverthemes.com/HTML/drake/assets/js/color.js"></script>

    @RenderSection("Scripts",false)
</body>
</html>